@page
@model WebApp.Pages_Games.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>New Game</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Number1">How many HUMAN players:</label>
                <input asp-for="@Model.Number1" type="number" min="1" max="5" required>
                <span asp-validation-for="@Model.Number1"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Number2">How many AI players:</label>
                <input asp-for="@Model.Number2" type="number" min="1" max="5" required>
                <span asp-validation-for="@Model.Number2"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DeckSize">How many packs of cards:</label>
                <input asp-for="@Model.DeckSize" type="number" min="1" max="3" required>
                <span asp-validation-for="@Model.DeckSize"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HandSize">Size of the hand:</label>
                <input asp-for="@Model.HandSize" type="number" min="2" max="10" required>
                <span asp-validation-for="@Model.HandSize"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="button-45"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
